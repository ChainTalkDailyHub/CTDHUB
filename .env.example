# Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ==========================================
# BLOCKCHAIN CONFIGURATION
# ==========================================

# BSC Mainnet RPC URL
BSC_RPC_URL=https://bsc-dataseed.binance.org/
RPC_BSC=https://bsc-dataseed.binance.org/

# BSC Testnet RPC URL (for development)
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Private key for server-side transactions (keep secure!)
# Generate a new wallet for this purpose, don't use your main wallet
PRIVATE_KEY=your_private_key_here
PRIVATE_KEY_TREASURY=your_private_key_here

# ==========================================
# CONTRACT ADDRESSES
# ==========================================

# CTDHub Token Contract (BEP-20)
TOKEN_ADDRESS=0x7f890a4a575558307826C82e4cb6E671f3178bfc
CTD_TOKEN_ADDRESS=0x7f890a4a575558307826C82e4cb6E671f3178bfc

# CTDHub Premium NFT Contract
CTD_PREMIUM_NFT_ADDRESS=0x...

# CTDHub Certificate Contract
CTD_CERT_ADDRESS=0x...

# Token burn amount (in tokens, not wei)
BURN_AMOUNT=10000

# ==========================================
# AI CONFIGURATION
# ==========================================

# API key for AI chat service (OpenAI, etc.)
AI_API_KEY=your_ai_api_key_here

# AI Model to use
AI_MODEL=gpt-3.5-turbo

# Max tokens per AI response
AI_MAX_TOKENS=500

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Environment mode
NODE_ENV=development

# Public chain ID (56 for BSC mainnet, 97 for testnet)
NEXT_PUBLIC_CHAIN_ID=56

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App metadata
NEXT_PUBLIC_APP_NAME=CTDHub Platform
NEXT_PUBLIC_APP_VERSION=2.0.0

# ==========================================
# SECURITY SETTINGS
# ==========================================

# JWT Secret for API authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key

# API Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# SUPABASE DATABASE CONFIGURATION
# ==========================================

# Para usar o banco de dados Supabase, configure estas variáveis:
# URL do seu projeto Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Chave pública (anon key) do Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here